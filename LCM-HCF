#include<stdio.h>

int main(){
	
	int i, x, y, min, max, least_common_multiple, greatest_common_divisor;
	
	printf("Please enter numbers :");
	scanf("%d%d", &x, &y);
	
	if(x<=y){
		min = x;
		max = y;
	}
	else{
		min = y;
		max = x;
	}
	
	for(i=2; i<=min; i++){
		
		if (min%i == 0 && max%i == 0){
			greatest_common_divisor = i;
		}
		
	}
	
	least_common_multiple = (x/greatest_common_divisor)*(y/greatest_common_divisor)*(greatest_common_divisor);
	
	printf("greatest_common_divisor : %d\n", greatest_common_divisor);
	printf("least_common_multiple : %d", least_common_multiple);
	
	
	
}
